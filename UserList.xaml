<Window x:Class="test.UserList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserList">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF0E0E1F" Offset="0.943"/>
            <GradientStop Color="#FF6967B5" Offset="0.293"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
       
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#FF1E1E2F" Height="60">
                <TextBlock Text="Список пользователей" VerticalAlignment="Center" Foreground="White" 
                           FontSize="24" Margin="20,0,0,0" FontWeight="Bold"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                <StackPanel x:Name="UsersPanel">
                   
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
