<Window x:Class="test.AddProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="Добавить товар" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название товара:" Margin="0,10,0,5"/>
            <TextBox x:Name="ProductNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Цена товара:" Margin="0,10,0,5"/>
            <TextBox x:Name="ProductPriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Путь к изображению:" Margin="0,10,0,5"/>
            <TextBox x:Name="ProductImagePathTextBox" Margin="0,0,0,10"/>

            <Button Content="Добавить" Width="100" Height="30" HorizontalAlignment="Center"
                    Click="AddProductButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
